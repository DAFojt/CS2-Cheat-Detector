{
    "manifest_version": 3,
    "name": "Cheat detector",
    "version": "0.1.0",
    "description": "Cheat detector is ready.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "24": "images/icon24.png",
            "32": "images/icon32.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://steamcommunity.com/profiles*", "https://*.steamcommunity.com/id*"],
            "js": ["content.js", "cache.js", "settings.js"],
            "css": ["content.css"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js"
      },
    "web_accessible_resources": [{
            "resources": [
                "images/*",
                "data/*"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "storage",
        "webNavigation"
    ],
    "host_permissions": [
        "https://api.leetify.com/api/*",
        "https://www.faceit.com/api/users/v1/*"
    ]
}